<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_travel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zech.simplerpg.Travel"
    android:background="@drawable/townimg"
    >

    <TextView
        android:text="REGION3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/region3TextView"
        android:textSize="30sp"
        android:layout_below="@+id/region2TextView"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <TextView
        android:text="REGION2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/region2TextView"
        android:textSize="30sp"
        android:layout_below="@+id/region1TextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="Unlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/region1CheckBox"
        android:clickable="false"
        android:layout_below="@+id/region1TextView"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:checked="true" />

    <CheckBox
        android:text="Unlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/region2TextView"
        android:layout_alignParentStart="true"
        android:id="@+id/region2CheckBox"
        android:clickable="false"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="Unlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/region3TextView"
        android:layout_alignParentStart="true"
        android:id="@+id/region3CheckBox"
        android:clickable="false"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backButton" />

    <Button
        android:text="Travel to Region 2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/region2Button"
        android:layout_alignBaseline="@+id/region2TextView"
        android:layout_alignBottom="@+id/region2TextView"
        android:layout_alignStart="@+id/region1Button" />

    <Button
        android:text="Travel to Region 3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/region3Button"
        android:layout_alignBaseline="@+id/region3TextView"
        android:layout_alignBottom="@+id/region3TextView"
        android:layout_alignStart="@+id/region2Button" />

    <Button
        android:text="Travel to Myrefall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/region1Button"
        android:layout_alignTop="@+id/region1TextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Myrefall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/region1TextView"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
